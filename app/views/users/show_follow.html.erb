<% provide(:title, @title) %>


  <div class="col-md-4">
      <%= gravatar_for @user %>
      <h2><%= @user.name %></h2>
      <span><%= link_to "view my profile", @user %></span>
      <span><b>Microposts:</b> <%= @user.microposts.count %></span>
    <section>
      <%= render 'shared/stats' %>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user), user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </div>

  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
    
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
