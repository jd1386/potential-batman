<% provide(:title, @user.name) %>

<aside>
	<div class="col-md-2"><%= gravatar_for @user %></div>
	<div class="col-md-10">
		<h2><%= @user.name %></h2>
		<%= render 'shared/stats' %>
		<%= render 'profile' %>
		<%= render 'follow_form' if signed_in? %>
	</div>
</aside>

	<div class="row">
		<% if @user.microposts.any? %>
			<h3>Microposts (<%= @user.microposts.count %>)</h3>
			<ol class="microposts">
				<%= render @microposts %>
			</ol>
			<%= will_paginate @microposts %>
		<% end %>
	</div>

