<% provide(:title, @user.name) %>

<section>
	<div class="col-md-4"><%= gravatar_for @user %>
	
		<h2><%= @user.name %></h2>
		<%= render 'shared/stats' %>
		<%= render 'profile' %>
		<%= render 'follow_form' if signed_in? %>
	</div>
</section>
	
	<div class="col-md-8">
		<div class="row">
			<% if @user.microposts.any? %>
				<h3>Microposts (<%= @user.microposts.count %>)</h3>
				<ol class="microposts">
					<%= render @microposts %>
				</ol>
				<%= will_paginate @microposts %>
			<% end %>
		</div>
	</div>
